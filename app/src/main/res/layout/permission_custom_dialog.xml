<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/permission_dialog_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/permission_dialog_title" />

        <TextView
            android:id="@+id/permission_dialog_description_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/permission_dialog_title_txt"
            tools:text="@string/permission_dialog_description_text" />


        <Button
            android:id="@+id/ok_button_permission_dialog"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="@string/ok_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cancel_button_permission_dialog"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/cancel_button_permission_dialog"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="@string/cancel_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ok_button_permission_dialog" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>